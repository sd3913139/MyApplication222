<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" >

    <View      android:layout_width="2dip"
               android:layout_height="fill_parent"
               android:background="#1ca2bb"/>

    <TextView     android:id="@+id/text_head_id_a"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:paddingBottom="10dip"
                  android:paddingTop="10dip"
                  android:textColor="#000000"
                  android:background="#58dada"
                  android:textSize="15sp"
                  android:text="Para." />

    <View      android:layout_width="0.5dip"
               android:layout_height="fill_parent"
               android:background="@color/color_dark_grey"/>

    <TextView     android:id="@+id/text_head_value_a"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingBottom="10dip"
                  android:paddingTop="10dip"
                  android:textColor="#000000"
                  android:background="#58dada"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:text="Value" />

    <View      android:layout_width="2dip"
               android:layout_height="fill_parent"
               android:background="#1ca2bb"/>

    <TextView     android:id="@+id/text_head_id_b"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingBottom="10dip"
                  android:textColor="#000000"
                  android:background="#58dada"
                  android:paddingTop="10dip"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:text="Para." />

    <View      android:layout_width="0.5dip"
               android:layout_height="fill_parent"
               android:background="@color/color_dark_grey"/>

    <TextView     android:id="@+id/text_head_value_b"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingBottom="10dip"
                  android:paddingTop="10dip"
                  android:textColor="#000000"
                  android:background="#58dada"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:text="Value" />

    <View      android:layout_width="2dip"
               android:layout_height="fill_parent"
               android:background="#1ca2bb"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.j.myapplication.ConsoleActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view5"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="1.0"/>

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/button_set"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@mipmap/ic_seticon"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"/>

    <Button
        android:layout_height="0dp"
        android:id="@+id/b_con_back"
        android:background="@drawable/back_button"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:layout_height="0dp"
        android:id="@+id/b_con_ford"
        android:background="@drawable/forward_button"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="567dp"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="193dp"
        app:layout_constraintGuide_percent="0.5026042"/>

    <TextView
        android:layout_width="0dp"
        android:id="@+id/textView"
        android:background="@color/colorPrimaryDark"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="105dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        style="@style/status_info_style"
        android:text="MODE"
        android:id="@+id/textView9"
        android:layout_height="20dp"
        android:layout_width="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <TextView
        style="@style/status_info_style"
        android:text="BATTRY"
        android:id="@+id/textview8"
        android:layout_height="20dp"
        android:layout_width="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"/>

    <TextView
        style="@style/status_info_style"
        android:text="PARAMETER"
        android:id="@+id/textView2"
        android:layout_height="20dp"
        android:layout_width="96dp"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="1.0"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view4"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="1.0"/>

    <View
        android:layout_width="0dp"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view2"
        android:layout_height="2dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/view"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="97dp"
        app:layout_constraintGuide_percent="0.25260416"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="294dp"
        app:layout_constraintGuide_percent="0.765625"/>

    <TextView
        style="@style/mode_style"
        android:text="Mode"
        android:background="@drawable/textline_color"
        android:id="@+id/textMode"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#282d4f"
        app:layout_constraintTop_toBottomOf="@+id/textView6"/>


    <TextView
        style="@style/mode_style"
        android:text="Battry"
        android:id="@+id/textBattry"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textBattry"
        app:layout_constraintTop_toTopOf="@+id/textBattry"
        android:layout_marginTop="11dp"/>
    <include
        layout="@layout/para_list_header"
        android:layout_height="wrap_content"
        android:layout_width="352dp"
        android:id="@+id/include"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.0"/>

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="567dp"
        android:id="@+id/guideline6"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="384dp"
        app:layout_constraintGuide_percent="1.0"/>

    <View android:layout_width="0dp"
          android:layout_height="2dp"
          android:background="#1ca2bb"
          android:id="@+id/viewup"
          app:layout_constraintBottom_toTopOf="@+id/include"
          app:layout_constraintRight_toRightOf="@+id/include"
          app:layout_constraintLeft_toLeftOf="@+id/include"
          app:layout_constraintHorizontal_bias="0.46"/>

    <View android:layout_width="0dp"
          android:layout_height="2dp"
          android:background="#1ca2bb"
          android:id="@+id/viewdown"
          app:layout_constraintTop_toBottomOf="@+id/listview2"
          app:layout_constraintLeft_toLeftOf="@+id/listview2"
          app:layout_constraintRight_toRightOf="@+id/listview2"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/b_con_stop"
        android:background="@drawable/stop_button"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/b_con_auto"
        android:background="@drawable/auto_button"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_height="48dp"
        android:id="@+id/textView6"
        android:background="@color/colorPrimary"
        android:text="  Robot Control"
        android:textColor="@color/white"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/button_set"
        />
    <View
        android:layout_width="0dp"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view10"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:layout_width="0dp"
        android:layout_height="194dp"
        android:scrollingCache="true"
        android:cacheColorHint="#000000"
        android:fastScrollEnabled="true"
        android:focusable="true"
        android:divider="#1ca2bb"
        android:dividerHeight="1dip"
        android:id="@+id/listview2"
        app:layout_constraintLeft_toLeftOf="@+id/include"
        app:layout_constraintRight_toRightOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="80dp"/>

    <CheckBox
        android:text="BrushSw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        tools:text="BrushSw"/>

</android.support.constraint.ConstraintLayout>
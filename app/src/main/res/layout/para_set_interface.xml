<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:weightSum="1">

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="151dp"
        android:id="@+id/timePicker"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"/>

    <View
        android:layout_width="wrap_content"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view2"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view3"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="0dp"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view11"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textClock"/>

    <TextView
        style="@style/status_info_style"
        android:text="Start Time"
        android:id="@+id/textView2"
        android:layout_height="22dp"
        android:layout_width="96dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/setbutton"
        android:minHeight="35dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/editText"/>
    <TextView
        style="@style/status_info_style"
        android:text="Clean Fre."
        android:id="@+id/textView1"
        android:layout_height="22dp"
        android:layout_width="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"/>

    <TextView
        style="@style/status_info_style"
        android:text="ID Set"
        android:id="@+id/textView3"
        android:layout_height="22dp"
        android:layout_width="96dp"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        style="@style/status_info_style"
        android:text="Time Set"
        android:id="@+id/textView4"
        android:layout_height="22dp"
        android:layout_width="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"/>

    <EditText
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:gravity="center"
        android:textSize="25dp"
        android:imeOptions="actionDone"
        android:theme="@style/EditTextStyle"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/setbutton"
        android:minHeight="35dip"
        android:text="Save"
        app:layout_constraintTop_toTopOf="@+id/editText2"
        app:layout_constraintLeft_toLeftOf="@+id/button3"/>

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:gravity="center"
        android:textSize="25dp"
        android:imeOptions="actionDone"
        android:theme="@style/EditTextStyle"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:text="Save"
        android:background="@drawable/setbutton"
        android:minHeight="35dip"
        app:layout_constraintTop_toTopOf="@+id/textClock"
        app:layout_constraintLeft_toLeftOf="@+id/button2"/>

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/button6"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@mipmap/ic_return_button"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_height="48dp"
        android:id="@+id/textView6"
        android:background="@color/colorPrimary"
        android:text="  Setting"
        android:textColor="@color/white"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        />
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/draw_dashline"
        android:id="@+id/view10"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintRight_toRightOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        android:layout_marginTop="47dp"/>

    <Button
        android:text="Get Parameters"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:id="@+id/button5"
        android:background="#8acfcf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view11"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center"
        android:text='Robot Console 1.0'
        tools:text="dd"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        app:layout_constraintRight_toRightOf="@+id/button5"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:gravity="center"
        android:text="2015~2018 JU-SMART all right reserved."
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:gravity="center"
        android:format24Hour="HH:MM"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="180dp"
        app:layout_constraintGuide_percent="0.46875"/>


</android.support.constraint.ConstraintLayout>